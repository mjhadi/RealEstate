{% extends "master.html.twig" %}
{% block title %}News list{% endblock %}
{% block content %}
    <p><a href="/news/add">Add News</a><p>
    <table border=1>
          <tr><th>#</th><th>Title</th><th>New Body</th><th>Date</th><th>action</th></tr>
        {% for n in list %}
                <tr class="{% if loop.index is odd %}rowodd{% else %}roweven{% endif %}">
                    <td>{{n.newsId}}</td>
                    <td>{{n.title}}</td>
                    <td>{{n.newsBody}}</td>
                    <td>{{n.newsDate}}</td>                    
                    <td>
                        <a href="/news/delete/{{n.newsId}}">Delete</a>
                        <a href="/news/edit/{{n.newsId}}">Edit</a>
                    </td>
                </tr>
        {% else %}
            <tr><td colspan="6"> You have no news</td></tr>
        {% endfor %}
    </table>    
{% endblock %}
